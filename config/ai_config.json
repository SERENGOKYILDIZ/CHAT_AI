{
  "ai_engine": {
    "model_size": "medium",
    "max_context_length": 1000,
    "creativity_level": 0.7,
    "knowledge_threshold": 0.6,
    "reasoning_depth": 3,
    "memory_capacity": 1000,
    "response_variety": 0.8
  },
  "nlp_processor": {
    "language": "turkish",
    "enable_stemming": true,
    "enable_lemmatization": true,
    "max_tokens": 1000,
    "min_word_length": 2
  },
  "knowledge_base": {
    "max_sources": 5,
    "relevance_threshold": 0.3,
    "update_frequency": "daily",
    "backup_enabled": true
  },
  "reasoning_engine": {
    "max_context_messages": 10,
    "logical_pattern_threshold": 0.5,
    "enable_causal_reasoning": true,
    "enable_temporal_reasoning": true
  },
  "creativity_module": {
    "metaphor_probability": 0.3,
    "analogy_probability": 0.4,
    "creative_question_probability": 0.4,
    "style_variation": 0.6
  },
  "memory_system": {
    "short_term_capacity": 1000,
    "long_term_capacity": 10000,
    "memory_consolidation_interval": 3600,
    "forgetting_curve_factor": 0.1
  },
  "performance": {
    "max_response_time": 5.0,
    "enable_caching": true,
    "cache_ttl": 3600,
    "enable_compression": true
  },
  "security": {
    "input_sanitization": true,
    "max_input_length": 5000,
    "rate_limiting": true,
    "max_requests_per_minute": 60
  },
  "logging": {
    "log_level": "INFO",
    "enable_performance_logging": true,
    "enable_security_logging": true,
    "log_retention_days": 30
  }
}
